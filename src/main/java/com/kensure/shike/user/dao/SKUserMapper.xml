		</if>
		<if test="level != null">
			level = #{level},
		</if>
		<if test="levelCode != null">
			level_code = #{levelCode},
		</if>
		<if test="status != null">
			status = #{status},
		</if>
		<if test="name != null">
			name = #{name},
		</if>
		<if test="noAlipay != null">
			no_alipay = #{noAlipay},
		</if>
		<if test="noTaobao != null">
			no_taobao = #{noTaobao},
		</if>
		<if test="noQq != null">
